#!/usr/bin/env bash

cmd=$1
shift
targets=("$@")

is_first="true"
for target in ${targets[@]}; do
  chunk="$cmd $target"
  if [ "${is_first}" = "true" ]; then
    tmux send-keys "$chunk" C-m
    is_first="false"
  else
    tmux split-window "$chunk"
    tmux select-layout tiled 1>/dev/null
  fi
done

tmux set-window-option synchronize-panes on
tmux select-pane -t 0
exit
