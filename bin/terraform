#!/usr/bin/env zsh
ESC="\e["
ESCEND=m
COLOR_OFF=${ESC}${ESCEND}
SCRIPT_NAME=$0
args=($@)

function echoRed() {
  # 文字色：Red
  echo -en "${ESC}31${ESCEND}"
  echo "${@}"
  echo -en "${COLOR_OFF}"
}

function confirmation(){
  echo
  echoRed '実行するなら yes を,  実行しないなら no入力か ctrl+c で抜けてください'
    read answer
    case $answer in
      yes)
        echo -e "tyeped yes.\n"
        return 0
        ;;
      no)
        echo -e "tyeped no.\n"
        echo -e "実行をキャンセルしました.\n"
        exit 255
        ;;
      *)
        echo -e "cannot understand $answer.\n"
        confirmation
        ;;
    esac
}

function confirmMes() {
    echoRed '本気でterraform apply実行しますか？' $SCRIPT_NAME
    confirmation
    echo terraform apply
    terraform apply
}

function preventMes() {
    echoRed '事故防止のためterraform destroy単体実行は潰してます' $SCRIPT_NAME
    exit 255
}

if [[ $args[1] = 'destroy' ]] ; then
  if [[ -z $args[2] ]]; then
    preventMes
  else
    if [[ $args[2] = '-force' ]] || [[ $args[2] = '-f' ]]; then
      preventMes
    fi
  fi
fi

if [[ $args[1] = 'apply' ]] ; then
  if [[ -z $args[2] ]]; then
    confirmMes
  else
    if [[ $args[2] = '-force' ]] || [[ $args[2] = '-f' ]]; then
      confirmMes
    fi
  fi
fi
