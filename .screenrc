escape ^t^t
startup_message off
vbell off
term xterm-256color

termcapinfo xterm*|kterm*|screen* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

caption always "%{= Rk} %?%F%{b kr}%? %t (screen #%n) %{-}"
hardstatus alwayslastline "%{= Gk} %-Lw%40L>%{b kg} %n %t %{-}%+Lw%-040=%{b km} %l %{.b} %Y/%m/%d %C:%s %A "
sorendition "= Rk"
defscrollback 10000

defencoding UTF-8
defkanji UTF-8
encoding UTF-8 UTF-8
mousetrack on

bind ^U encoding utf8
bind ^E encoding euc
bind ^J encoding sjis

#通常の操作キー eval 'hoge' になっているのに意味はない
bind x remove
bind j eval 'focus down'
bind k eval 'focus up'
bind h eval 'focus left'
bind l eval 'focus right'
bind o eval 'only'
bind s eval 'split' focus screen
#^t h , ^t kとの誤爆を防ぐために^h ^kは無効にする
bind ^h
bind ^k

#screen paste bufferをpbcopyに流しこむ
bindkey -m ' ' eval 'stuff " "' writebuf 'exec sh -c "nkf -w /tmp/screen-exchange | pbcopy "'
bindkey -m 'Y' eval 'stuff "Y"' writebuf 'exec sh -c "nkf -w /tmp/screen-exchange | pbcopy "'
bindkey -m 'W' eval 'stuff "W"' writebuf 'exec sh -c "nkf -w /tmp/screen-exchange | pbcopy "'
bind -c operate ^]  command
bind i eval 'resize  -v +1'
bind u eval 'resize  -v -1'
bind m eval 'resize -h +1'
bind n eval 'resize -h -1'
bind = eval 'resize -v ='
bind + eval 'resize -h ='

#ログの設定。ある作業時にだけコメント除去して使う。
#logfile 'log/screen.log/screen-%n-%H-%y%m%d.log'
#log on
#deflog on

shell -zsh

