#!/usr/bin/env zsh
#概要：git reflogにたいしていろいろやる
git reflog | peco --prompt "[$0]"| awk 'BEGIN{FS= " "}{print $1}'| \
  pecoAfterAction "%%STDIN%% pbcopy" \
    "git show" \
    "git checkout" \
    "git checkout " \
    "git checkout -t" \
    "git diff" \
    "git vdiff" \
    "git reset --soft" \
    "git reset --hard" \
    "%%STDIN%% cat" \
    "%%STDIN%% paaTovim" \
    "%%STDIN%% pecoPipe" \
    "%%STDIN%% paaPbCopy" \
    "paaInputCommandAny"

