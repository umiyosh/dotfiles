#!/usr/bin/env zsh
#概要：git log を１行で表示していろいろする
git log --date=iso --pretty=format:'%h - <%an> %ce - %cd - %d %s ' --abbrev-commit \
| peco | awk 'BEGIN{FS= " "}{print $1}'| \
  pecoAfterAction "%%STDIN%% pbcopy" \
    "git show" \
    "git checkout" \
    "git checkout " \
    "git checkout -t" \
    "git diff" \
    "git vdiff" \
    "git revert" \
    "git rebase -i" \
    "git reset --soft" \
    "git reset --hard" \
    "%%STDIN%% paaTovim" \
    "%%STDIN%% pecoPipe" \
    "paaInputCommandAny"

